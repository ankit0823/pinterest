<% include ./partials/header.ejs %>
<div class="w-full h-screen bg-zinc-400 flex items-center justify-center">

    <div class="w-[29vw] bg-white px-20 py-10 rounded-[30px]">
     <div class="flex items-center justify-center px-3 py-2 mb-5"><i class="fa-brands fa-pinterest fa-2xl" style="color: #f81616;"></i></div>
      <h1 class="text-3xl mb-5 font-semibold tracking-tighter capitalize text-center text-zinc-700 leading-none ">Create New Account</h1>
      <form action="/register" method="post">
        Email<input class="border-2 rounded-md block mt-2 w-full px-3 py-2"  type="email" name="email" placeholder="Email">
        Full Name<input class="border-2 rounded-md block mt-2 w-full px-3 py-2"  type="text" name="fullname" placeholder="Full Name">
        Username<input class="border-2 rounded-md block mt-2 w-full px-3 py-2"  type="text" name="username" placeholder="Username">
        password<input class="border-2 rounded-md block mt-2 w-full px-3 py-2"  type="password" name="password" placeholder="Create password">
        <!-- Birthdate<input class="border-2 rounded-md block mt-2 w-full px-3 py-2"  type="" name="" placeholder="dd-mm-yyyy"> -->
        <input class="border-2 rounded-[30px] block mt-4 w-full px-3 py-2 bg-red-600 text-white rounded-full"  type="submit" value="continue">
        <h3 class="w-full text-center m-2 font-semibold">OR</h3>
        <a class="inline-block border-2 rounded-[30px] px-2 py-2 mt-2 text-semibold bg-zinc-100 w-full text-center" href="#">Continue With Google</a>
        <p class="text-xs font-semibold text-zinc-700 mt-5 w-3/4 mx-auto text-center">By continuing, you agree to Pinterest's Terms of Service and acknowledge you've read our Privacy Policy. Notice at collection. </p>
      </form>
      <a class="inline-block mt-3 text-semibold text-zinc-700 w-full text-center" href="/">Already a member? Log in</a>
    </div>
<% include ./partials/footer.ejs %>